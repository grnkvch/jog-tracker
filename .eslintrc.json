{
    "env": {
        "browser": true,
        "es2020": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "settings": {
        "import/resolver": {
          "node": {
            "paths": ["src"]
          }
        }
      },
    "rules": {
        "import/prefer-default-export": 0,
        "semi": ["error", "never"],
        "arrow-parens": ["error", "as-needed"],
        "jsx-a11y/label-has-associated-control": 0,
        "react/prop-types": 0,
        "no-unused-expressions": [
            2,
            {
              "allowShortCircuit": true
            }
          ],
        "camelcase": 0
    }
}
